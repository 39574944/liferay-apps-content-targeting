<?xml version="1.0"?>
<!DOCTYPE hook PUBLIC "-//Liferay//DTD Hook 6.2.0//EN" "http://www.liferay.com/dtd/liferay-hook_6_2_0.dtd">

<hook>
	<portal-properties>portal.properties</portal-properties>
	<language-properties>content/Language*.properties</language-properties>
	<custom-jsp-dir>/META-INF/custom_jsps</custom-jsp-dir>
	<servlet-filter>
		<servlet-filter-name>Youtube URL Filter</servlet-filter-name>
		<servlet-filter-impl>com.liferay.contenttargeting.analytics.hook.filter.YoutubeVideoHtmlFilter</servlet-filter-impl>
	</servlet-filter>
	<servlet-filter-mapping>
		<servlet-filter-name>Youtube URL Filter</servlet-filter-name>
		<before-filter>Valid Html Filter</before-filter>
		<url-pattern>/group/*</url-pattern>
		<url-pattern>/user/*</url-pattern>
		<url-pattern>/web/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</servlet-filter-mapping>
</hook>